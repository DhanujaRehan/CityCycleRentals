<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivBicycle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_bike"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_corner"
            android:contentDescription="Bicycle Image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mountain Bike"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/fourth_color"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvRentalDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rented: 12/12/2024"
                android:textSize="12sp"
                android:textColor="@color/third_color"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From: 15/12/2024"
                android:textSize="14sp"
                android:textColor="@color/third_color"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To: 18/12/2024"
                android:textSize="14sp"
                android:textColor="@color/third_color"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$45.00"
                android:textSize="16sp"
                android:textColor="@color/secondary_color"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMPLETED"
            android:textSize="10sp"
            android:textColor="@color/third_color"
            android:background="@drawable/status_background"
            android:padding="4dp"
            android:layout_gravity="top" />

    </LinearLayout>

</androidx.cardview.widget.CardView>