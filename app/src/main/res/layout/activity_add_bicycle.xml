<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF1CA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Bicycle"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2D4F2B"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/ivBicycleImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_add_photo"
                android:scaleType="centerInside"
                android:background="#F5F5F5"
                android:contentDescription="Bicycle Image" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Select Image"
            android:textColor="#FFFFFF"
            android:backgroundTint="#708A58"
            android:layout_marginBottom="24dp"
            style="@style/Widget.MaterialComponents.Button" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bicycle Description"
                android:inputType="text"
                android:textColor="#2D4F2B"
                android:textColorHint="#708A58" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price per day ($)"
                android:inputType="numberDecimal"
                android:textColor="#2D4F2B"
                android:textColorHint="#708A58" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnAddBicycle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Add Bicycle"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFB823"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</ScrollView>