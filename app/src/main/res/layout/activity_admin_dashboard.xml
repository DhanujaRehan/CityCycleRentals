<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/main_color"
    android:gravity="center">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_admin"
        android:layout_marginBottom="32dp"
        android:contentDescription="Admin Icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/fourth_color"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage CityCycle Rentals"
        android:textSize="16sp"
        android:textColor="@color/third_color"
        android:layout_marginBottom="48dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <Button
            android:id="@+id/btnAddBicycle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Add New Bicycle"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/secondary_color"
            android:drawablePadding="16dp"
            android:paddingStart="24dp"
            android:gravity="start|center_vertical"
            style="@style/Widget.MaterialComponents.Button" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <Button
            android:id="@+id/btnViewCustomers"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="View Customers"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/third_color"
            android:drawablePadding="16dp"
            android:paddingStart="24dp"
            android:gravity="start|center_vertical"
            style="@style/Widget.MaterialComponents.Button" />

    </androidx.cardview.widget.CardView>

</LinearLayout>